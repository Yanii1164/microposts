  
  <h3><u>登録情報</u></h3>
  <h5>
  Name : <%= @user.name %><br>
  Email : <%= @user.email %><br>
  Area : <%= @user.area %>
  </h5>

  <%= link_to "編集", edit_user_path, class:"btn btn-large btn-success" %>

  <%= link_to "フォロー", "/users/followings", class:"btn btn-large btn-primary" %>

  <%= link_to "フォロワー", "/users/followers", class:"btn btn-large btn-primary" %>

  
  

<div class="row">
  
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
  
</div>